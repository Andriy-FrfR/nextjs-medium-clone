generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  username String
  bio      String?
  image    String?
  articles Article[]

  @@map("users")
}

model Article {
  id          Int      @id() @default(autoincrement())
  slug        String   @unique
  title       String
  description String
  body        String
  author      User     @relation(fields: [authorId], references: [id])
  authorId    Int
  createdAt   DateTime @default(now())

  @@index([authorId])
  @@map("articles")
}
